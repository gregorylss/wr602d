{% extends 'base.html.twig' %}

{% block title %}Hello SubscriptionController!{% endblock %}

{% block body %}

<div class="container">

    <p>You are actually susbcribe with this : </p>
    <p>{{ subscriptionUser.title }}</p>

    <p>Here is the list of all the subscriptions:</p>
    {% for subscription in subscriptions %}
        {% set subscription_class = '' %}
        {% if loop.index == 1 %}
            {% set subscription_class = 'free' %}
        {% elseif loop.index == 2 %}
            {% set subscription_class = 'basic' %}
        {% elseif loop.index == 3 %}
            {% set subscription_class = 'premium' %}
        {% endif %}
        <div class="subscription-card {{ subscription_class }}">
            <h2>{{ subscription.title }}</h2>
            <p>{{ subscription.price }} â‚¬</p>
            <p>{{ subscription.description }}</p>
            <p>{{ subscription.pdfLimit }} pdf max.</p>
        </div>
    {% endfor %}





    <div id="subscriptionForm" >
        {{ form_start(form) }}
        {{ form_row(form.subscription) }}
        <button class="btnform" type="submit">Change your subscription</button>
        {{ form_end(form) }}
    </div>

</div>

{% endblock %}
